{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "dagudelo/multi-client",
            "hostname" : "client",
            "essential" : false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "dagudelo/multi-nginx",
            "hostname" : "nginx",
            "essential" : true,
            "memory": 128,
            "portMappings": [
                {
                  "hostPort": 80,
                  "containerPort": 80
                }
              ],
              "links": [
                "client",
                "server"
              ]

        },
        {
            "name": "server",
            "image": "dagudelo/multi-server",
            "hostname" : "api",
            "essential" : false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "ddagudelo/multi-workerr",
            "hostname" : "worker",
            "essential" : false,
            "memory": 128
        }
        
    ]
}